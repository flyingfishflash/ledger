{
  "compileOnSave": true,
  "compilerOptions": {
    "baseUrl": "./",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "module": "esnext",
    "moduleResolution": "node",
    "outDir": "../dist/out-tsc",
    "importHelpers": true,
    "target": "ES2022",
    "paths": {
      "@core/*": ["app/core/*"],
      "@shared/*": ["app/shared/*"],
      "@env": ["environments/environment"],
      "@modules/*": ["app/modules/*"],
      "@data/*": ["app/data/*"]
    },
    "lib": ["ES2022", "dom"]
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}
